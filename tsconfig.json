{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "lib": ["ES2020", "ES6"],
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "target": "ES6",
    "baseUrl": "./src",
    "strict": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
